@using Integration.Web.ViewModels;
@model HomeViewModel;
@{
    ViewData["Title"] = "Home Page";
}
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Index" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="formFile" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="formFile" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose file...</label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>
    </div>

</form>

@if(Model?.UpdatedRowsNumber != null)
{
    <h1>@Model.UpdatedRowsNumber - rows added</h1>
}
